{
  "info": {
    "name": "Auth Worker - API",
    "description": "Postman collection for auth-worker (register, login, refresh, logout, me, health). Update collection/environment variable `baseUrl` to your deployment (e.g. http://127.0.0.1:8787).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
    }
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8787",
      "type": "string"
    },
    {
      "key": "email",
      "value": "user@example.com",
      "type": "string"
    },
    {
      "key": "password",
      "value": "P@ssw0rd123",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/_/health",
          "host": ["{{baseUrl}}"],
          "path": ["_", "health"]
        }
      },
      "response": []
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "register"]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save accessToken and refreshToken to environment variables if returned",
              "try {",
              "  const json = pm.response.json();",
              "  if (json.accessToken) { pm.collectionVariables.set('accessToken', json.accessToken); }",
              "  if (json.refreshToken) { pm.collectionVariables.set('refreshToken', json.refreshToken); }",
              "  console.log('Saved tokens to collection variables');",
              "} catch (e) { console.log('No JSON or tokens returned'); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get Me (requires Authorization)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "me"]
        }
      },
      "response": []
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/token/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "token", "refresh"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save rotated tokens if returned",
              "try {",
              "  const json = pm.response.json();",
              "  if (json.accessToken) pm.collectionVariables.set('accessToken', json.accessToken);",
              "  if (json.refreshToken) pm.collectionVariables.set('refreshToken', json.refreshToken);",
              "  console.log('Rotated tokens saved');",
              "} catch (e) { console.log('No JSON or tokens returned'); }"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Logout (revoke refresh)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "auth", "logout"]
        }
      },
      "response": []
    }
  ]
}
