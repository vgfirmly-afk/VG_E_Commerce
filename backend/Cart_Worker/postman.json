    {
      "name": "Integration Tests",
      "item": [
        {
          "name": "Full Cart Flow",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate test IDs",
                  "pm.collectionVariables.set('skuId', pm.variables.replaceIn('{{$randomUUID}}'));",
                  "pm.collectionVariables.set('productId', pm.variables.replaceIn('{{$randomUUID}}'));",
                  "pm.collectionVariables.set('sessionId', pm.variables.replaceIn('session-{{$randomUUID}}'));"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
