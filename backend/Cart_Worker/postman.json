  "item": [
    {
      "name": "Cart Worker - Public",
      "item": [
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has ok field\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('ok');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{cartBaseUrl}}/_/health",
              "host": ["{{cartBaseUrl}}"],
              "path": ["_", "health"]
            }
          }
        },
        {
          "name": "Get or Create Cart (Logged In User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('cart_id');",
                  "    pm.expect(response).to.have.property('items');",
                  "    pm.collectionVariables.set('cartId', response.cart_id);",
                  "    console.log('Cart:', response);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "X-User-Id",
                "value": "{{userId}}"
              }
            ],
            "url": {
              "raw": "{{cartBaseUrl}}/api/v1/cart",
              "host": ["{{cartBaseUrl}}"],
              "path": ["api", "v1", "cart"]
            }
          }
        },
