{
  "name": "w2_cart_worker",
  "version": "1.0.0",
  "description": "Cart Worker",
  "license": "ISC",
  "author": "VG",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "wrangler dev",
    "deploy": "wrangler publish",
    "test": "NODE_OPTIONS=--experimental-vm-modules mocha 'test/**/*.test.js' --timeout 10000",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules mocha 'test/**/*.test.js' --watch --timeout 10000",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules c8 --reporter=text --reporter=html --reporter=lcov mocha 'test/**/*.test.js' --timeout 10000",
    "coverage": "npm run test:coverage"
  },
  "dependencies": { 
    "@microlabs/otel-cf-workers": "^1.0.0-rc.52",
    "@opentelemetry/api": "^1.9.0",
    "itty-router": "^2.6.0",
    "joi": "^17.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0"
  },
  "c8": {
    "check-coverage": true,
    "lines": 80,
    "functions": 90,
    "branches": 75,
    "statements": 80,
    "exclude": [
      "test/**",
      "**/*.test.js",
      "**/node_modules/**",
      "**/migrations/**",
      "generate_keys.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "include": [
      "src/**/*.js"
    ]
  }
}
