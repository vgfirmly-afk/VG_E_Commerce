    },
    {
      "name": "Integration Tests",
      "item": [
        {
          "name": "Full Stock Flow",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate test IDs",
                  "pm.collectionVariables.set('skuId', pm.variables.replaceIn('{{$randomUUID}}'));",
                  "pm.collectionVariables.set('productId', pm.variables.replaceIn('{{$randomUUID}}'));",
                  "pm.collectionVariables.set('reservationId', pm.variables.replaceIn('res-{{$randomUUID}}'));"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Source",
                "value": "catalog-worker-service-binding"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku_id\": \"{{skuId}}\",\n  \"product_id\": \"{{productId}}\",\n  \"sku_code\": \"SKU-TEST-{{$randomInt}}\",\n  \"quantity\": 100,\n  \"low_stock_threshold\": 10,\n  \"reason\": \"Integration test stock initialization\"\n}"
            },
            "url": {
              "raw": "{{inventoryBaseUrl}}/api/v1/stock/:sku_id",
              "host": ["{{inventoryBaseUrl}}"],
              "path": ["api", "v1", "stock", ":sku_id"],
              "variable": [
