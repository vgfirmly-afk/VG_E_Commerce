        },
        {
          "name": "Update Fulfillment Status",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "if (!pm.collectionVariables.get('orderId')) {",
                  "    console.error('Error: orderId variable is required.');",
                  "    throw new Error('orderId variable is required');",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('status');",
                  "    pm.expect(response).to.have.property('status_history');",
                  "    ",
                  "    console.log('Status updated to:', response.status);",
                  "    console.log('Status history entries:', response.status_history.length);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "X-User-Id",
                "value": "{{userId}}",
                "description": "User ID for tracking who made the update"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\",\n  \"notes\": \"Order is being prepared for shipment\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{fulfillmentBaseUrl}}/api/v1/orders/:order_id/status",
              "host": ["{{fulfillmentBaseUrl}}"],
              "path": ["api", "v1", "orders", ":order_id", "status"],
              "variable": [
                {
                  "key": "order_id",
                  "value": "{{orderId}}"
                }
              ]
            },
            "description": "Update fulfillment status. Valid statuses: pending, confirmed, processing, shipped, delivered, cancelled, refunded. Requires orderId variable."
          }
        },
