        {
          "name": "Get Order by ID",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Validate orderId is set",
                  "if (!pm.collectionVariables.get('orderId') || pm.collectionVariables.get('orderId') === '{{orderId}}') {",
                  "    console.warn('Warning: orderId variable is not set. Please create an order first or set it manually.');",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('order_id');",
                  "    pm.expect(response).to.have.property('order_number');",
                  "    pm.expect(response).to.have.property('status');",
                  "    pm.expect(response).to.have.property('items');",
                  "    pm.expect(response).to.have.property('status_history');",
                  "    ",
                  "    console.log('Order Details:');",
                  "    console.log('Order Number:', response.order_number);",
                  "    console.log('Status:', response.status);",
                  "    console.log('Total:', response.total, response.currency);",
                  "    console.log('Items:', response.items.length);",
                  "    console.log('Status History:', response.status_history.length, 'entries');",
                  "    ",
                  "    if (response.shipping_tracking) {",
                  "        pm.collectionVariables.set('trackingId', response.shipping_tracking.tracking_id);",
                  "        console.log('Tracking:', response.shipping_tracking.tracking_number);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{fulfillmentBaseUrl}}/api/v1/orders/:order_id",
              "host": ["{{fulfillmentBaseUrl}}"],
              "path": ["api", "v1", "orders", ":order_id"],
              "variable": [
                {
                  "key": "order_id",
                  "value": "{{orderId}}",
                  "description": "Order ID"
                }
              ]
