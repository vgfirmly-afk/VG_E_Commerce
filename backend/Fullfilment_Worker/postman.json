          "name": "Create Fulfillment (Webhook)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate test IDs if not set",
                  "if (!pm.collectionVariables.get('checkoutSessionId')) {",
                  "    pm.collectionVariables.set('checkoutSessionId', 'session-' + pm.variables.replaceIn('{{$randomUUID}}'));",
                  "}",
                  "if (!pm.collectionVariables.get('paymentId')) {",
                  "    pm.collectionVariables.set('paymentId', 'payment-' + pm.variables.replaceIn('{{$randomUUID}}'));",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('order_id');",
                  "    pm.expect(response).to.have.property('order_number');",
                  "    pm.expect(response).to.have.property('status');",
                  "    ",
                  "    pm.collectionVariables.set('orderId', response.order_id);",
                  "    pm.collectionVariables.set('orderNumber', response.order_number);",
                  "    ",
                  "    console.log('Fulfillment created successfully:');",
                  "    console.log('Order ID:', response.order_id);",
                  "    console.log('Order Number:', response.order_number);",
                  "    console.log('Status:', response.status);",
                  "    console.log('Items:', response.items.length);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
