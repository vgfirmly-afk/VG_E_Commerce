        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has ok field\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('ok');",
                  "    pm.expect(response.ok).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{fulfillmentBaseUrl}}/_/health",
              "host": ["{{fulfillmentBaseUrl}}"],
              "path": ["_", "health"]
            },
            "description": "Health check endpoint to verify the Fulfillment Worker is running."
          }
        },
        {
          "name": "Get All Orders (Logged In User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('orders');",
                  "    pm.expect(response).to.have.property('count');",
                  "    pm.expect(response.orders).to.be.an('array');",
                  "    ",
                  "    if (response.orders && response.orders.length > 0) {",
                  "        const firstOrder = response.orders[0];",
                  "        pm.collectionVariables.set('orderId', firstOrder.order_id);",
                  "        pm.collectionVariables.set('orderNumber', firstOrder.order_number);",
                  "        console.log('Found', response.count, 'orders');",
                  "        console.log('First order:', firstOrder.order_number);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "X-User-Id",
                "value": "{{userId}}",
                "description": "Required for logged-in users"
              }
            ],
            "url": {
              "raw": "{{fulfillmentBaseUrl}}/api/v1/orders?limit=50&offset=0",
              "host": ["{{fulfillmentBaseUrl}}"],
              "path": ["api", "v1", "orders"],
              "query": [
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Number of orders to return"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Offset for pagination"
                }
              ]
            },
            "description": "Get all orders for a logged-in user. Requires X-User-Id header. Supports pagination with limit and offset query parameters."
          }
        },
        {
          "name": "Get All Orders (Guest User)",
